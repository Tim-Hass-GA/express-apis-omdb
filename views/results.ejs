<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>OMDB Search Site - APIs and Express</title>
  </head>
  <body>
    <% movies.forEach(function(movie){ %>
    <h1><%= movie.Title %></h1>
    <ul>
      <li>Year Released: <%= movie.Year %></li>
      <li>IMDb ID: <%= movie.imdbID %></li>
      <li>Type: <%= movie.Type %></li>
    </ul>
    <h2>Movie Poster</h2>
    <% if (movie.Poster !== "N/A") { %>
    <img src="<%= movie.Poster %>">
    <% } else { %>
    <p>No poster for this movie.</p>
    <% } %>
   <% }); %>
  </body>
</html>
